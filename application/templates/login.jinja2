{% extends "basic_layout.jinja2" %}

{% block content %}
    <div>
    <h2>Login</h2>
        <form method="POST" action="{{ url_for('auth_bp.login') }}">
            
            <fieldset>
            {{ form.email.label }}
            {{ form.email(placeholder='youremail@example.com') }}
            {% if form.email.errors %}
                <ul>
                {% for error in form.email.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
                </ul>
            {% endif %}
            </fieldset>

            <fieldset>
            {{ form.password.label }}
            {{ form.password }}
            {% if form.password.errors %}
                <ul>
                {% for error in form.password.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
                </ul>
            {% endif %}
            </fieldset>

            {{ form.submit }}
            {{ form.hidden_tag() }}
        </form>
        <div>
            <span>Don't have an account?</span>
            <a href="{{ url_for('auth_bp.signup') }}">Sign up</a>
        </div>
    </div>
{% endblock %}